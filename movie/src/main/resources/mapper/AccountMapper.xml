<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.movie.repository.AccountMapper">
    <resultMap id="accountMap" type="com.gp.movie.model.Account">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="status" property="status"/>
        <result column="registerTime" property="registerTime"/>
    </resultMap>

    <sql id="accountList">id, nickname, username, status, registerTime</sql>

    <select id="queryByList" resultMap="accountMap">
        SELECT
            <include refid="accountList"/>
        FROM
            account
        LIMIT
            #{page.index}, #{page.pageSize}
    </select>

    <select id="queryById" resultType="com.gp.movie.model.Account">
        SELECT
            id, nickname, username, status, registerTime
        FROM
            account
        WHERE
            id = #{id}
    </select>

    <select id="queryByUsername" resultType="com.gp.movie.model.Account">
        SELECT
            id, nickname, username, password, status, registerTime
        FROM
            account
        WHERE
            username = #{username}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account
            (nickname, username, password)
        VALUES
            (#{account.nickname}, #{account.username}, #{account.password})
    </insert>

    <update id="update">
        UPDATE account
        <set>
            <if test="null != account.nickname and '' != account.nickname">
                nickname = #{account.nickname},
            </if>
            <if test="null != account.status and '' != account.status">
                status = #{account.status},
            </if>
        </set>
        WHERE
            id = #{account.id}
    </update>

    <delete id="delete">
        DELETE FROM account WHERE id = #{id}
    </delete>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(id) FROM account
    </select>
</mapper>